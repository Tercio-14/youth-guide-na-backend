{
  "info": {
    "name": "Offline Mode Control API",
    "description": "API endpoints for controlling offline mode detection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Get Current Settings",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3001/api/offline/mode/settings",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["api", "offline", "mode", "settings"]
        },
        "description": "Retrieve current offline mode settings"
      }
    },
    {
      "name": "2. Disable Auto-Detection",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"autoDetection\": false\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "http://localhost:3001/api/offline/mode/toggle",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["api", "offline", "mode", "toggle"]
        },
        "description": "Disable automatic offline detection"
      }
    },
    {
      "name": "3. Enable Auto-Detection",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"autoDetection\": true\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "http://localhost:3001/api/offline/mode/toggle",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["api", "offline", "mode", "toggle"]
        },
        "description": "Enable automatic offline detection"
      }
    },
    {
      "name": "4. Force Offline Mode ON",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"forceOffline\": true\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "http://localhost:3001/api/offline/mode/force",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["api", "offline", "mode", "force"]
        },
        "description": "Force offline mode (only works when auto-detection is disabled)"
      }
    },
    {
      "name": "5. Force Offline Mode OFF",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"forceOffline\": false\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "http://localhost:3001/api/offline/mode/force",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["api", "offline", "mode", "force"]
        },
        "description": "Exit forced offline mode"
      }
    },
    {
      "name": "6. Test Validation Error",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"forceOffline\": true\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "http://localhost:3001/api/offline/mode/force",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3001",
          "path": ["api", "offline", "mode", "force"]
        },
        "description": "This should fail with 400 error if auto-detection is still enabled. Run 'Enable Auto-Detection' first to test this."
      }
    }
  ]
}
